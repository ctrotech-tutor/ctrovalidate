{
  "name": "ctrovalidate",
  "version": "2.1.0",
  "description": "A lightweight, powerful, and zero-dependency JavaScript library for client-side form validation with a declarative, HTML-first approach.",
  "type": "module",
  "main": "./dist/ctrovalidate.umd.cjs",
  "types": "./dist/types/index.d.ts",
  "module": "./dist/ctrovalidate.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/ctrovalidate.js",
      "require": "./dist/ctrovalidate.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vitepress dev docs",
    "build": "vite build && tsc",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "release": "release-it",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "prepare": "husky"
  },
  "author": "Ctrotech",
  "license": "MIT",
  "keywords": [
    "validation",
    "form validation",
    "vanilla js",
    "client-side",
    "declarative",
    "validator",
    "form",
    "no-dependencies",
    "ctrotech-tutor",
    "ctrotech",
    "typescript",
    "accessible",
    "a11y"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ctrotech-tutor/ctrovalidate.git"
  },
  "bugs": {
    "url": "https://github.com/ctrotech-tutor/ctrovalidate/issues"
  },
  "homepage": "https://github.com/ctrotech-tutor/ctrovalidate#readme",
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@release-it/conventional-changelog": "^8.0.1",
    "conventional-commits-filter": "^5.0.0",
    "conventional-commits-parser": "^6.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.0.11",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.1.1",
    "release-it": "^17.0.0",
    "vite": "^7.1.2",
    "vitepress": "^1.0.0-rc.25",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
