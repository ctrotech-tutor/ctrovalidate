{
  "name": "ctrovalidate",
  "version": "2.0.0",
  "description": "A lightweight, powerful, and zero-dependency JavaScript library for client-side form validation with a declarative, HTML-first approach.",
  "type": "module",
  "main": "./dist/ctrovalidate.umd.cjs",
  "module": "./dist/ctrovalidate.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/ctrovalidate.js",
      "require": "./dist/ctrovalidate.umd.cjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vitepress dev docs",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "author": "Ctrotech",
  "license": "MIT",
  "keywords": [
    "validation",
    "form validation",
    "vanilla js",
    "client-side",
    "declarative",
    "validator",
    "form",
    "no-dependencies",
    "ctrotech-tutor",
    "ctrotech",
    "typescript",
    "accessible",
    "a11y"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ctrotech-tutor/ctrovalidate.git"
  },
  "homepage": "https://github.com/ctrotech-tutor/ctrovalidate#readme",
  "devDependencies": {
    "jsdom": "^26.1.0",
    "vite": "^7.1.2",
    "vitepress": "^1.0.0-rc.25",
    "vitest": "^3.2.4"
  },
  "dependencies": {}
}
