{
  "name": "@ctrovalidate/next",
  "version": "4.0.0",
  "description": "Next.js integration for Ctrovalidate.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --tsconfig tsconfig.build.json",
    "test": "vitest run --passWithNoTests"
  },
  "peerDependencies": {
    "next": ">=13.4.0"
  },
  "dependencies": {
    "@ctrovalidate/core": "workspace:*"
  },
  "author": "Ctrotech (https://github.com/ctrotech-tutor)",
  "license": "MIT"
}
